<h2>Create a new Post</h2>
<!-- the F block param is known as a form nuilder. 
	use it to build the elments of our form.. -->
<%= form_for @post do |f| %>
	<div>
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</div>
	<div>
		<%= f.label :content%><br>
		<%= f.text_area :content%>
	</div>
	<div>
		<%= f.submit 'Submit New post' %>
	</div>
<% end %>